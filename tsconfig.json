{
	"compilerOptions": {
		"baseUrl": "src/",
		"paths": {
			"@assets/*": [
				"./assets/*"
			],
			"@context": [
				"./__context__/"
			],
			"@hooks": [
				"./__hooks__/"
			],
			"@type/*": [
				"./__types__/*"
			],
			"@lib/*": [
				"./__lib__/*"
			],
			"@themes/*": [
				"./__themes__/*"
			],
			"@tokens": [
				"./__tokens__/"
			],
			"@components/*": [
				"./components/*"
			],
			"@screens/*": [
				"./screens/*"
			],
			"@templates/*": [
				"./templates/*"
			]
		},
		"module": "commonjs",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"exclude": [
		"node_modules",
		".vscode",
		".github",
		"public",
		".cache",
		"static",
	],
	"include": [
		"src",
		"gatsby-*",
		"@typings/*",
	]
}