{
    "Main": {
        "title": {
            "type": "Text",
            "config": {
                "label": "Title"
            }
        },
        "uid": {
            "type": "UID",
            "config": {
                "label": "UID"
            }
        },
        "season": {
            "type": "Link",
            "config": {
                "select": "document",
                "customtypes": [
                    "season"
                ],
                "label": "Season"
            }
        },
        "teaser": {
            "type": "Text",
            "config": {
                "label": "Teaser"
            }
        },
        "description": {
            "type": "StructuredText",
            "config": {
                "single": "paragraph",
                "label": "Description"
            }
        },
        "tagline": {
            "type": "Text",
            "config": {
                "label": "Tagline"
            }
        },
        "hashtag": {
            "type": "Text",
            "config": {
                "label": "Hashtag"
            }
        }
    },
    "Main Images": {
        "hero_image": {
            "type": "Image",
            "config": {
                "constraint": {},
                "thumbnails": [],
                "label": "Hero Image"
            }
        },
        "card_image": {
            "type": "Image",
            "config": {
                "constraint": {
                    "width": 1200,
                    "height": 800
                },
                "thumbnails": [],
                "label": "Card Image"
            }
        },
        "poster_image": {
            "type": "Image",
            "config": {
                "constraint": {
                    "width": 600,
                    "height": 900
                },
                "thumbnails": [],
                "label": "Poster Image"
            }
        },
        "thumbnail_image": {
            "type": "Image",
            "config": {
                "constraint": {
                    "width": 600,
                    "height": 600
                },
                "thumbnails": [],
                "label": "Thumbnail Image"
            }
        }
    },
    "Script & Author": {
        "author": {
            "type": "Text",
            "config": {
                "label": "Author"
            }
        },
        "script_link": {
            "type": "Link",
            "config": {
                "allowTargetBlank": true,
                "label": "Script Link"
            }
        },
        "author_link": {
            "type": "Link",
            "config": {
                "allowTargetBlank": true,
                "label": "Author Link"
            }
        }
    },
    "Performances & Tickets": {
        "runtime_hours": {
            "type": "Number",
            "config": {
                "label": "Runtime Hours"
            }
        },
        "runtime_minutes": {
            "type": "Number",
            "config": {
                "label": "Runtime Minutes"
            }
        },
        "intermissions": {
            "type": "Select",
            "config": {
                "options": [
                    "0",
                    "1",
                    "2"
                ],
                "default_value": "0",
                "label": "Intermissions"
            }
        },
        "age_rating": {
            "type": "Select",
            "config": {
                "options": [
                    "R",
                    "PG-13",
                    "PG"
                ],
                "default_value": "R",
                "label": "Age Rating"
            }
        },
        "content_advisory": {
            "type": "Text",
            "config": {
                "label": "Content Advisory"
            }
        },
        "effects_advisory": {
            "type": "Text",
            "config": {
                "label": "Effects Advisory"
            }
        },
        "location": {
            "type": "Link",
            "config": {
                "select": "document",
                "customtypes": [
                    "locations",
                    "location"
                ],
                "label": "Location"
            }
        },
        "performances": {
            "type": "Group",
            "config": {
                "fields": {
                    "datetime": {
                        "type": "Timestamp",
                        "config": {
                            "label": "Datetime"
                        }
                    },
                    "price": {
                        "type": "Number",
                        "config": {
                            "label": "Price"
                        }
                    },
                    "initial_quantity": {
                        "type": "Number",
                        "config": {
                            "label": "Initial Quantity"
                        }
                    },
                    "ticket_type": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "Internal",
                                "External",
                                "Door"
                            ],
                            "default_value": "Internal",
                            "label": "Ticket Type"
                        }
                    },
                    "external_ticket_link": {
                        "type": "Link",
                        "config": {
                            "allowTargetBlank": true,
                            "label": "External Ticket Link"
                        }
                    },
                    "talkback": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "No",
                                "Yes"
                            ],
                            "default_value": "No",
                            "label": "Talkback"
                        }
                    },
                    "pwyw": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "No",
                                "Yes"
                            ],
                            "default_value": "No",
                            "label": "Pay What You Want"
                        }
                    },
                    "preview": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "No",
                                "Yes"
                            ],
                            "default_value": "No",
                            "label": "Preview"
                        }
                    },
                    "status": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "Active",
                                "Canceled"
                            ],
                            "default_value": "Active",
                            "label": "Status"
                        }
                    }
                },
                "label": "Performances"
            }
        }
    },
    "Artists": {
        "artists": {
            "type": "Group",
            "config": {
                "fields": {
                    "artist": {
                        "type": "Link",
                        "config": {
                            "select": "document",
                            "customtypes": [
                                "artist"
                            ],
                            "label": "Artist"
                        }
                    },
                    "role": {
                        "type": "Text",
                        "config": {
                            "label": "Role"
                        }
                    },
                    "bio": {
                        "type": "StructuredText",
                        "config": {
                            "multi": "paragraph, strong, em, hyperlink, list-item, o-list-item, o-list-item",
                            "allowTargetBlank": true,
                            "label": "Bio"
                        }
                    }
                },
                "label": "Artists"
            }
        }
    },
    "Sponsors": {
        "sponsors": {
            "type": "Group",
            "config": {
                "fields": {
                    "sponsor": {
                        "type": "Link",
                        "config": {
                            "select": "document",
                            "customtypes": [
                                "sponsor"
                            ],
                            "label": "Sponsor"
                        }
                    },
                    "contribution": {
                        "type": "Text",
                        "config": {
                            "label": "Contribution"
                        }
                    }
                },
                "label": "Sponsors"
            }
        }
    },
    "SEO": {
        "seo_hide": {
            "type": "Boolean",
            "config": {
                "default_value": false,
                "label": "Hide this show from search engines?"
            }
        },
        "seo_title": {
            "type": "Text",
            "config": {
                "label": "SEO Title"
            }
        },
        "seo_description": {
            "type": "Text",
            "config": {
                "label": "SEO Description"
            }
