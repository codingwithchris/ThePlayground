{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "",
		"paths": {
			"@app/config/*": [
				"./@app/config/*"
			],
			"@nerve/core/*": [
				"./src/core/*"
			],
			"@nerve/assets": [
				"./src/assets/"
			],
			"@nerve/domains/*": [
				"./src/domains/*"
			],
			"@nerve/shared/*": [
				"./src/shared/*"
			],
		},
	},
	"exclude": [
		"public",
		".cache",
		"static",
	],
	"include": [
		"src/**/*",
		"@app/**/*",
		"gatsby-*.js",
		".eslintrc.js",
	]
}