{
    "processors": [
        "stylelint-processor-styled-components"
    ],
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-styled-components",
    ],
    "rules": {
        "color-hex-length": "long",
        "color-named": "never",
        "unit-allowed-list": [
            "px",
            "rem",
            "s",
            "deg",
            "%",
            "vh",
            "vw",
            "fr"
        ]
    },
    "ignoreFiles": [
        "node_modules",
        "docs/*",
        "cache/*",
        "public/*",
    ]
}