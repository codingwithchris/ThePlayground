{
    "processors": [
        "stylelint-processor-styled-components"
    ],
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-styled-components"
    ],
    "rules": {
        "color-hex-case": "upper",
        "color-hex-length": "long",
        "color-named": "never",
        "unit-whitelist": [
            "px",
            "rem",
            "s",
            "deg"
        ]
    }
}
