{
  "name": "the-nerve",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "postinstall": "lerna bootstrap",
    "clean:packages": "lerna clean --yes",
    "clean:cache": "lerna run empty-cache",
    "clean:root": "rimraf node_modules",
    "clean:nuke": "yarn clean:cache && yarn lint:clean && yarn clean:packages && rimraf yarn.lock yarn clean:root",
    "clean:nuke:rebuild": "yarn clean:nuke && yarn install",
    "start": "yarn clean:cache && lerna run start --parallel",
    "cms:init": "cd packages/cms && sanity init",
    "cms:deploy": "lerna run sanity-deploy",
    "web:build": "lerna run gatsby:build",
    "web:serve": "lerna run gatsby:serve",
    "web:netlify": "cd packages/web && yarn netlify",
    "lint:js": "lerna run lint:js",
    "lint:js:fix": "lerna run lint:js:fix",
    "lint:clean": "lerna run lint:clean",
    "lint:css": "lerna run lint:css",
    "lint:css:fix": "lerna run lint:css:fix",
    "lint:all": "lerna run lint:all",
    "lint:all:fix": "lerna run lint:all:fix"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js,*.jsx,.ts,*.tsx": [
      "npm run lint:js:fix",
      "git add"
    ]
  }
}