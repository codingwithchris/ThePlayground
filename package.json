	"scripts": {
		"dev": "NODE_OPTIONS=\"-r esm\" gatsby develop",
		"build": "NODE_OPTIONS=\"-r esm\" GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"serve": "npm run build && gatsby serve",
		"clean": "NODE_OPTIONS=\"-r esm\" gatsby clean",
		"lint:js": "./node_modules/.bin/eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:js:fix": "npm run lint:js --fix",
		"lint:css": "./node_modules/.bin/stylelint 'src/**/*.css' --syntax css",
		"lint:css:fix": "npm run lint:css --fix",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:js:fix && npm run lint:css:fix"
		}
