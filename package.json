{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "postinstall": "lerna bootstrap",
    "clean:packages": "lerna clean --yes",
    "clean:cache": "lerna run empty-cache",
    "clean:root": "rimraf node-modules",
    "clean:nuke": "npm run clean:cache && npm run clean:packages && npm run clean:root",
    "start": "npm run clean:cache && lerna run start --parallel",
    "cms:init": "cd packages/cms && sanity init",
    "cms:deploy": "lerna run sanity-deploy",
    "web:build": "lerna run gatsby:build",
    "web:serve": "lerna run gatsby:serve",
    "web:netlify": "cd packages/web && npm run netlify",
    "lint": "eslint 'packages/**' --cache --cache-location node_modules/.cache/eslint --debug",
    "lint:js": "npm run lint",
    "lint:js:fix": "npm run lint:js --fix",
    "lint:css": "./node_modules/.bin/stylelint '**/*.css' --syntax css",
    "lint:css:fix": "npm run lint:css --fix"
  },
  "devDependencies": {
    "@codingwithchris/eslint-config": "^1.0.5",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js,*.jsx,.ts,*.tsx": [
      "npm run lint:js:fix",
      "git add"
    ],
    "*.css": [
      "npm run lint:css:fix",
      "git add"
    ]
  }
}