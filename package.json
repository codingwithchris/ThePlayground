		"react-dom": "^17.0.1",
		"react-helmet": "^6.1.0",
		"react-hook-form": "^6.9.5",
		"styled-components": "^5.2.0"
	},
	"devDependencies": {
		"@codingwithchris/eslint-config": "^1.0.3",
		"@types/classnames": "^2.2.10",
		"@types/css-font-loading-module": "^0.0.4",
		"@types/node": "^14.14.2",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"@types/react-helmet": "^6.1.0",
		"@types/styled-components": "^5.1.4",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.5.0",
		"babel-eslint": "^10.1.0",
		"babel-plugin-styled-components": "^1.11.1",
		"eslint": "^7.11.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-airbnb-typescript": "^12.0.0",
		"eslint-config-prettier": "^6.14.0",
		"eslint-import-resolver-babel-module": "^5.2.0",
		"eslint-plugin-html": "^6.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"esm": "^3.2.25",
		"husky": "^4.3.0",
		"prettier": "^2.1.2",
		"stylelint": "^13.7.2",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0",
		"typescript": "^4.0.3"
	},
	"scripts": {
		"dev": "NODE_OPTIONS=\"-r esm\" gatsby develop",
		"build": "NODE_OPTIONS=\"-r esm\" GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"serve": "gatsby build && gatsby serve",
		"clean": "NODE_OPTIONS=\"-r esm\" gatsby clean",
		"lint:js": "./node_modules/.bin/eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:js:fix": "npm run lint:js --fix",
		"lint:css": "./node_modules/.bin/stylelint 'src/**/*.css' --syntax css",
		"lint:css:fix": "npm run lint:css --fix",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:js:fix && npm run lint:css:fix"
		}
	},
	"eslintConfig": {
		"extends": [
			"@codingwithchris/eslint-config/react-typescript"
		],
		"rules": {
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-empty-interfaces": "off"
		}
	},
	"eslintIgnore": [
		"node_modules/",
		".github/",
		".cache/",
		"public/",
		"static/"
	]
}